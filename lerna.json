{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "exact": true
    },
    "ignoreChanges": [
      "**/CHANGELOG.md",
      "**/node_modules/**",
      "**/package.json",
      "**/*.md"
    ],
    "publish": {
      "npmClient": "npm",
      "allowBranch": [
        "main",
        "dev"
      ],
      "registry": "https://registry.npmjs.org/"
    }
  },
  "version": "independent"
}
